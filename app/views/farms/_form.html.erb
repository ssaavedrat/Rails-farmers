<%= form_with(model: farm) do |form| %>
  <% if farm.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(farm.errors.count, "error") %> prohibited this farm from being saved:</h2>
      <ul>
        <% farm.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>
  <h3>Granjeros</h3>
  <div>
    <%= form.fields_for :farmers do |farmer| %>
      <%= farmer.label :name, style: "display: block" %>
      <%= farmer.text_field :name %>
      <%= farmer.label :age, style: "display: block" %>
      <%= farmer.text_field :age %>
      <br>
      <%= farmer.check_box :_destroy %>
      <%= farmer.label :_destroy, "Borrar" %>
    <% end %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
